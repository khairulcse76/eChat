<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contantMainHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <EditText
        android:id="@+id/edtCreatePost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/add_post_bg_home"
        android:ems="14"
        android:inputType="textMultiLine"
        android:lines="2"
        android:hint="Write you Openior"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="36dp"
        android:textColorHint="@color/colorGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/img_add_post"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/button_bg"
        android:contentDescription="Upload Photos"
        app:layout_constraintBottom_toBottomOf="@+id/edtCreatePost"
        app:layout_constraintStart_toStartOf="@+id/edtCreatePost"
        app:layout_constraintTop_toTopOf="@+id/edtCreatePost"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/image_icon" />

    <ImageView
        android:id="@+id/upload_post"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtCreatePost"
        app:layout_constraintEnd_toEndOf="@+id/edtCreatePost"
        app:layout_constraintTop_toTopOf="@+id/edtCreatePost"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/arrow_narrow_circle_broken_up_right"
        android:contentDescription="content Post" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCreatePost"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>